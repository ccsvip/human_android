<?xml version="1.0" encoding="utf-8"?>
<!--
  本地数字人配置界面布局
  功能: 提供本地数字人模型的配置和下载界面
  设计: 采用现代化卡片式设计，符合Material Design规范
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/local_main_background">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local_main_title"
            android:textSize="20sp"
            android:textColor="@color/local_main_text_primary"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/btnLanguage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_language"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="@string/language_selector"
            android:tint="@color/local_main_text_primary" />

    </RelativeLayout>

    <!-- 主内容区ScrollView -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/local_main_content_padding">

            <!-- 输入地址 -->
            <TextView
                android:id="@+id/labelAddress"
                style="@style/LocalMainLabel"
                android:text="@string/local_main_input_address"
                android:layout_marginTop="0dp" />

            <RelativeLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etAddress"
                    style="@style/LocalMainInputField"
                    android:hint="@string/model_url"
                    android:inputType="textUri"
                    android:text="https://github.com/duixcom/Duix-Mobile/releases/download/v1.0.0/bendi3_20240518.zip" />

                <ImageView
                    android:id="@+id/ivRefresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_refresh"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="刷新" />
            </RelativeLayout>

            <!-- 模型选择 -->
            <TextView
                android:id="@+id/labelModel"
                style="@style/LocalMainLabel"
                android:text="@string/local_main_model_select" />

            <RelativeLayout
                android:id="@+id/layoutModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvModelSelector"
                    style="@style/LocalMainDropdown"
                    android:text="@string/local_main_model_hint"
                    android:textColor="@color/local_main_text_hint"
                    android:clickable="false" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_dropdown"
                    android:clickable="false"
                    android:contentDescription="展开" />
            </RelativeLayout>

            <!-- 应用选择 -->
            <TextView
                android:id="@+id/labelApp"
                style="@style/LocalMainLabel"
                android:text="@string/local_main_app_select" />

            <RelativeLayout
                android:id="@+id/layoutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvAppSelector"
                    style="@style/LocalMainDropdown"
                    android:text="@string/local_main_app_hint"
                    android:textColor="@color/local_main_text_hint"
                    android:clickable="false" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_dropdown"
                    android:clickable="false"
                    android:contentDescription="展开" />
            </RelativeLayout>

            <!-- 高级设置 -->
            <TextView
                android:id="@+id/tvAdvancedToggle"
                style="@style/LocalMainLabel"
                android:text="@string/local_main_advanced_settings"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_marginStart="-8dp" />

            <LinearLayout
                android:id="@+id/layoutAdvanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_rounded"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchDebug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_message"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 启动按钮 -->
            <Button
                android:id="@+id/btnStart"
                style="@style/LocalMainButton"
                android:text="@string/local_main_start_button" />

        </LinearLayout>
    </ScrollView>

    <!-- 返回主界面按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBackToHome"
        style="@style/BackToHomeFAB"
        android:src="@drawable/ic_back_to_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
